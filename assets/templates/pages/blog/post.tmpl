{{define "page:title"}}{{.Post.Frontmatter.Title}}{{end}}

{{define "page:meta"}}
<meta name="description" content="{{.Post.Frontmatter.Description}}">
<meta name="keywords" content="{{range $i, $tag := .Post.Frontmatter.Tags}}{{if $i}}, {{end}}{{$tag}}{{end}}">
<meta name="author" content="Blog Author">
<meta property="og:title" content="{{.Post.Frontmatter.Title}}">
<meta property="og:description" content="{{.Post.Frontmatter.Description}}">
{{if .Post.Frontmatter.Cover}}<meta property="og:image" content="{{.Post.Frontmatter.Cover}}">{{end}}
{{end}}

{{define "page:main"}}
<article class="blog-post">
    <header>
        <h1>{{.Post.Frontmatter.Title}}</h1>
        <div class="post-meta">
            <time datetime="{{.Post.Frontmatter.Date.Format "2006-01-02T15:04:05Z07:00"}}">
                {{.Post.Frontmatter.Date.Format "January 2, 2006"}}
            </time>
            {{if .Post.Frontmatter.Tags}}
            <div class="tags">
                {{range .Post.Frontmatter.Tags}}
                <span class="tag">{{.}}</span>
                {{end}}
            </div>
            {{end}}
        </div>
        {{if .Post.Frontmatter.Cover}}
        <img src="{{.Post.Frontmatter.Cover}}" alt="{{.Post.Frontmatter.Title}}" class="post-cover">
        {{end}}
    </header>
    
    <div class="post-content">
        {{.Post.HTML | safeHTML}}
    </div>
    
    <footer class="post-footer">
        <a href="/blog" class="back-to-blog">‚Üê Back to Blog</a>
    </footer>
</article>
{{end}}
